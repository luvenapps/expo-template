{
  "expo": {
    "name": "__APP_NAME__",
    "slug": "__APP_SLUG__",
    "version": "1.0.0",
    "scheme": "__APP_NAME__",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "__APP_ID__",
      "buildNumber": "1",
      "usesAppleSignIn": true,
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false
      },
      "appleTeamId": "HWJZHVS443"
      // Uncomment when you have a domain and set EXPO_PUBLIC_APP_DOMAIN:
      // "associatedDomains": ["applinks:betterhabits.com"]
    },
    "android": {
      "versionCode": 1,
      "softwareKeyboardLayoutMode": "pan",
      "permissions": ["POST_NOTIFICATIONS"],
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "__APP_ID__",
      "intentFilters": [
        {
          "action": "VIEW",
          "category": ["BROWSABLE", "DEFAULT"],
          "data": [{ "scheme": "__APP_NAME__" }]
        }
        // Uncomment when you have a domain and set EXPO_PUBLIC_APP_DOMAIN:
        // {
        //   "action": "VIEW",
        //   "category": ["BROWSABLE", "DEFAULT"],
        //   "autoVerify": true,
        //   "data": [
        //     {
        //       "scheme": "https",
        //       "host": "betterhabits.com",
        //       "pathPrefix": "/auth-callback"
        //     }
        //   ]
        // }
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro",
      "output": "static"
    },
    "plugins": [
      "expo-router",
      "expo-system-ui",
      "expo-sqlite",
      "expo-background-task",
      [
        "expo-notifications",
        {
          "enableBackgroundRemoteNotifications": true
        }
      ],
      "expo-localization",
      "expo-apple-authentication",
      "expo-web-browser",
      "@react-native-firebase/app",
      "@react-native-firebase/crashlytics",
      "./plugins/withFirebaseCredentials.js",
      "./plugins/withFirebaseConfig.js",
      "./plugins/withFirebaseModularHeaders.js",
      "expo-secure-store"
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
